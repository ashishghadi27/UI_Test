<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:cropToPadding="true"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_programmer"
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true"
            android:cropToPadding="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:background="@drawable/funda_back"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_calculator"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#436199"
                android:fontFamily="@font/josefin_sans_semibold"
                android:textSize="25sp"
                android:text="Fundamental Math"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Lessons, 4.5 Hours"
                android:fontFamily="@font/josefin_sans"
                android:textColor="#0DB4B3"
                android:textSize="20sp"
                android:layout_marginTop="7dp"/>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="Lessons"
        android:layout_margin="20dp"
        android:textColor="#436199"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/funda_back"
                        android:padding="17dp"
                        android:src="@drawable/play_back"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_marginVertical="10dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="#0DB4B3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:text="Single Variable Calculus"
                            android:textColor="#436199"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:text=" - 55 mins"
                            android:textColor="#436199"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_back"
                        android:text="Play Now"
                        android:textColor="#fff"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/josefin_sans_semibold"
                        android:textSize="20sp"/>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/funda_back"
                        android:padding="17dp"
                        android:src="@drawable/play_back_light"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_marginVertical="10dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="#0DB4B3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:text="Multi Variable Calculus With Theory"
                            android:textColor="#829AC8"
                            android:lineHeight="25dp"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:text=" - 75 mins"
                            android:textColor="#829AC8"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/funda_back"
                        android:text="Play Now"
                        android:textColor="#829AC8"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        android:elevation="0dp"
                        android:fontFamily="@font/josefin_sans_semibold"
                        android:textSize="20sp"/>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/funda_back"
                        android:padding="17dp"
                        android:src="@drawable/play_back_light"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_marginVertical="10dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="#0DB4B3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:text="Calculus Of Several Variables"
                            android:textColor="#829AC8"
                            android:lineHeight="25dp"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:text=" - 60 mins"
                            android:textColor="#829AC8"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/funda_back"
                        android:text="Play Now"
                        android:textColor="#829AC8"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        style="?android:attr/borderlessButtonStyle"
                        android:elevation="0dp"
                        android:fontFamily="@font/josefin_sans_semibold"
                        android:textSize="20sp"/>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/funda_back"
                        android:padding="17dp"
                        android:src="@drawable/play_back_light"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_marginVertical="10dp"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:background="#0DB4B3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:text="Mathematics Of Computer"
                            android:textColor="#829AC8"
                            android:lineHeight="25dp"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:text=" - 85 mins"
                            android:textColor="#829AC8"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/funda_back"
                        android:text="Play Now"
                        android:textColor="#829AC8"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        style="?android:attr/borderlessButtonStyle"
                        android:fontFamily="@font/josefin_sans_semibold"
                        android:textSize="20sp"/>



                </LinearLayout>

            </LinearLayout>





        </LinearLayout>



    </ScrollView>



</LinearLayout>