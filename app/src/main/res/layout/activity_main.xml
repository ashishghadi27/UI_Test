<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:cropToPadding="true"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_programmer"
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true"
            android:cropToPadding="true"/>

    </RelativeLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid_sans"
                    android:textSize="45sp"
                    android:text="Hello,"
                    android:textColor="#436199"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid_sans_bold"
                    android:text="Chinmay"
                    android:textColor="#436199"
                    android:textSize="55sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                >

                <Space
                    android:id="@+id/space"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/space"
                    android:background="@drawable/blue_back"
                    android:orientation="vertical"
                    android:elevation="2dp"
                    android:layout_marginEnd="5dp"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans_semibold"
                        android:textSize="18sp"
                        android:layout_marginEnd="5dp"
                        android:text="LESSONS"
                        android:textColor="#fff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans_bold"
                        android:textSize="40sp"
                        android:layout_marginTop="5dp"
                        android:text="1,003"
                        android:textColor="#fff"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/space"
                    android:background="@drawable/red_back"
                    android:orientation="vertical"
                    android:elevation="5dp"
                    android:layout_marginStart="5dp"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans_semibold"
                        android:textSize="18sp"
                        android:layout_marginEnd="2dp"
                        android:text="HOURS"
                        android:textColor="#fff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans_bold"
                        android:textSize="40sp"
                        android:layout_marginTop="5dp"
                        android:text="1,320"
                        android:textColor="#fff"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans_bold"
                android:text="Make Top Skills"
                android:layout_margin="20dp"
                android:textColor="#436199"
                android:textSize="30sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/space"
                        android:background="@drawable/blue_back"
                        android:orientation="vertical"
                        android:elevation="2dp"
                        android:layout_marginEnd="5dp"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:padding="10dp"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_stack"
                            android:textColor="#fff"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans"
                            android:textSize="25sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:text="DESIGN"
                            android:textColor="#fff"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/space"
                        android:background="@drawable/red_back"
                        android:orientation="vertical"
                        android:elevation="2dp"
                        android:layout_marginStart="15dp"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="5dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_code"
                            android:textColor="#fff"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans"
                            android:textSize="25sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:text="CODE"
                            android:textColor="#fff"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/space"
                        android:background="@drawable/yellow_back"
                        android:orientation="vertical"
                        android:elevation="2dp"
                        android:layout_marginStart="15dp"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="5dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_english"
                            android:textColor="#fff"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans"
                            android:textSize="25sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:text="LANG"
                            android:textColor="#fff"/>

                    </LinearLayout>




                </LinearLayout>


            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:text="Free Courses"
                    android:layout_margin="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#436199"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:text="See All"
                    android:layout_margin="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="#737477"
                    android:textSize="20sp" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/funda"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_calculator"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#737477"
                        android:fontFamily="@font/josefin_sans_semibold"
                        android:textSize="25sp"
                        android:text="Fundamental Math"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 Lessons, 4.5 Hours"
                        android:fontFamily="@font/josefin_sans"
                        android:textColor="#0DB4B3"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>


            </LinearLayout>

            
        </LinearLayout>
        
        
    </ScrollView>

</LinearLayout>